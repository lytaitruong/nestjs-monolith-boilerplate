{
  "name": "nest-monolith-boilerplate",
  "version": "0.0.1",
  "description": "NestJS boilerplate support developer can build Restful APIs quickly",
  "author": "Lý Tại Trường",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lytaitruong/nestjs-monolith-boilerplate.git"
  },
  "keywords": [
    "nestjs-boilerplate",
    "nestjs-starter-template",
    "nestjs-template"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "start": "nest start",
    "start:dev": "nest start --watch --exec \"bun run\"",
    "start:pro": "bun run dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "bunx prisma generate",
    "prisma:studio": "bunx prisma studio",
    "prisma:seed": "bunx prisma db seed",
    "prisma:push": "bunx prisma db push",
    "prisma:pull": "bunx prisma db pull",
    "prisma:viewer": "bunx prisma migrate dev --create-only",
    "prisma:create": "bunx prisma migrate dev",
    "prisma:deploy": "bunx prisma migrate deploy",
    "prepare": "husky install",
    "commit": "cz",
    "lint-staged": "lint-staged",
    "release": "standard-version --no-verify"
  },
  "dependencies": {
    "@fastify/compress": "^6.4.0",
    "@fastify/cookie": "^9.1.0",
    "@fastify/csrf-protection": "^6.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^6.11.2",
    "@fastify/swagger": "^8.10.1",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.2.6",
    "@nestjs/swagger": "^7.1.12",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.3.1",
    "cache-manager": "^5.2.3",
    "cache-manager-ioredis-yet": "^1.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify": "^4.23.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "nestjs-pino": "^3.5.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.2.0",
    "prisma-pagination": "^0.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.3.1",
    "@types/passport": "^1.0.13",
    "@types/passport-jwt": "^3.0.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bun-types": "1.0.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.0",
    "prisma": "^5.3.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && bun run build",
      "prepare-commit-msg": "exec < /dev/tty && bun cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bun format --uncommitted"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "bun": ">= 1",
    "node": ">= 18",
    "nest": ">= 10",
    "jest": ">= 29",
    "fastify": ">= 4",
    "typescript": ">= 5",
    "postgresql": ">= 16"
  }
}
