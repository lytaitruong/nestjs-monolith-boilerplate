generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN @map("admin")
  USER  @map("user")
}

enum Gender {
  MALE   @map("male")
  FEMALE @map("female")
  OTHERS @map("others")
}

enum Status {
  ACTIVE     @map("active")
  INACTIVE   @map("inactive")
  DEACTIVATE @map("deactivate")
}

enum State {
  ONLINE  @map("online")
  OFFLINE @map("offline")
}

enum Provider {
  NORMAL @map("normal")
  GITHUB @map("github")
  GOOGLE @map("google")
}

model Auth {
  userId       String   @map("user_id") @db.VarChar(28)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  device       String   @db.VarChar(128)
  refreshToken String?  @map("refresh_token") @db.VarChar(255)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamp
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamp

  @@id([userId, device])
  @@map("auth")
}

model User {
  id        String   @id @default(cuid()) @db.VarChar(28)
  phone     String?  @unique @db.VarChar(15)
  email     String?  @unique @db.VarChar(64)
  image     String?  @db.VarChar(128)
  password  String?  @db.VarChar(128)
  provider  Provider @default(NORMAL)
  state     State    @default(OFFLINE)
  status    Status   @default(INACTIVE)
  gender    Gender   @default(OTHERS)
  role      Role     @default(USER)
  auth      Auth[]
  tasks     Task[]
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamp

  @@map("users")
}

enum TaskStatus {
  PENDING
  CANCELED
  COMPLETE
}

model Task {
  id        String     @id @default(cuid()) @db.VarChar(28)
  content   String     @db.Text()
  hashtag   String[]
  title     String     @db.VarChar(32)
  status    TaskStatus @default(PENDING)
  userId    String     @map("user_id") @db.VarChar(28)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now()) @map("created_at") @db.Timestamp
  updatedAt DateTime   @updatedAt @map("updated_at") @db.Timestamp

  @@index([userId, status])
  @@map("tasks")
}
